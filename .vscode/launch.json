{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "outputCapture": "std",
      "env": {
        "ELECTRON_DISABLE_SECURITY_WARNINGS": "true",
        "ELECTRON_ENABLE_LOGGING": "true"
      },
      "args": ["--remote-debugging-port=9222"]
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/frontend",
      "timeout": 30000,
      "urlFilter": "app://*",
      "restart": true
    },
    {
      "name": "Python: Debug FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.py", // Update this path
      "args": ["--ollama-port", "11434", "--server-port", "8001"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": ["Electron: Main", "Electron: Renderer"],
      "presentation": {
        "order": 1,
        "group": "Electron"
      },
      "stopAll": true
    },
    {
      "name": "Full Stack",
      "configurations": [
        "Electron: Main",
        "Electron: Renderer"
        // "Backend: Python"
      ],
      "presentation": {
        "order": 2,
        "group": "Full Stack"
      },
      "stopAll": true
    }
  ]
}
